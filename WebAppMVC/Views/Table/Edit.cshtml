@using WebAppMVC.ViewModels
@model ConsumerViewModel


@{
    ViewData["Title"] = "Редатировать";
}

<h4> Редактировать данные : " @Model.ConsumerName "  на "  @Model.Date " </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="ConsumerName" class="control-label"> </label>
                <label> @Model.ConsumerName</label>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <label> @Model.Date </label>
            </div>
            <br/>
            @if(@Model.Temperature != 0)
            {
                <div class="form-group">
                    <label asp-for="Temperature" class="control-label"></label>
                    <input asp-for="Temperature" class="form-control" />
                    <span asp-validation-for="Temperature" class="text-danger"></span>
                </div>
             }
           

            @if(@Model.PriceValue != 0)
            {
            <div class="form-group">
                <label asp-for="PriceValue" class="control-label"></label>
                <input asp-for="PriceValue" class="form-control" />
                <span asp-validation-for="PriceValue" class="text-danger"></span>
            </div>
            }
            
            <br/>
            <div class="form-group">
                <input type="submit" value="Сохранить измения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к таблице</a>
</div>